{% extends 'base.html.twig' %}

{% block titre %}
{% if action == "ajouter" %}
    Ajout d'une entreprise
{% else %}
    Modification d'une entreprise
{% endif %}
{% endblock %}

{% block contenu %}
{% if action == "ajouter" %}
    <h5> Saisissez les caractéristiques de l'entreprise que vous souhaitez ajouter. </h5>
{% else %}
    <h5> Modifiez les caractéristiques de l'entreprise que vous souhaitez. </h5>
{% endif %}


{{ form_start(vueFormulaire) }}

{{ form_row(vueFormulaire.nom, {'attr':{'placeholder':"Nom de l'entreprise..."}} ) }}

{{ form_row(vueFormulaire.adresse, {'attr':{'placeholder':"Adresse postale de l'entreprise..."}} ) }}

{{ form_row(vueFormulaire.activite, {'attr':{'placeholder':"Activité de l'entreprise..."}} ) }}

{{ form_row(vueFormulaire.site, {'attr':{'placeholder':"Site web (url) de l'entreprise..."}}) }}


<br><button type="submit" class="btn btn-primary"> Valider </button>

{{ form_end(vueFormulaire) }}

{% endblock %}