<form method="post" action="{{ path('formation_delete', {'slug': formation.slug}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette formation ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.slug) }}">
    <button class="btn btn-primary">Supprimer</button>
</form>
